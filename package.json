{
    "name": "emr-suite-backend",
    "type": "module",
   "scripts": {
        "local": "ENV=development node src/server.js",
        "dev": "nodemon --watch src --ext js --exec \"ENV=development node src/server.js\"",
        "start": "ENV=production node src/server.js",
        "seed": "ENV=development node src/seed/seed.js",
        "docker:up:dev": "docker compose -f docker/docker-compose.dev.yml --env-file .env.docker.dev up --build -d && npm run docker:migrate:dev && npm run docker:seed:dev",
        "docker:migrate:dev": "docker compose -f docker/docker-compose.dev.yml run backend npm run migrate",
        "docker:seed:dev": "docker compose -f docker/docker-compose.dev.yml run backend npm run seed",
        "docker:down:dev": "docker compose -f docker/docker-compose.dev.yml --env-file .env.docker.dev down",
        "docker:remove-orphans:dev": "docker compose -f docker/docker-compose.dev.yml down --remove-orphans",

        "docker:up:prod": "docker compose -f docker/docker-compose.prod.yml --env-file .env.prod up -d --build && npm run docker:migrate:prod && npm run docker:seed:prod",
        "docker:migrate:prod": "docker compose -f docker/docker-compose.prod.yml run backend npm run migrate",
        "docker:seed:prod": "docker compose -f docker/docker-compose.prod.yml run backend npm run seed",
        "docker:down:prod": "docker compose -f docker/docker-compose.prod.yml --env-file .env.prod down",
        "docker:remove-orphans:prod": "docker compose -f docker/docker-compose.prod.yml down --remove-orphans",

        "docker:logs:dev": "docker compose -f docker/docker-compose.dev.yml --env-file .env.docker.dev logs -f",
        "docker:logs:prod": "docker compose -f docker/docker-compose.prod.yml --env-file .env.prod logs -f",

        "migrate": "sequelize db:migrate",
        "migrate:undo": "sequelize db:migrate:undo",
        "migrate:undo:all": "sequelize db:migrate:undo:all",

        "test": "jest --runInBand",
        "test:watch": "jest --watch",
        "test:rbac": "jest tests/rbac-all.test.js"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.3.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "pg": "^8.11.5",
        "prom-client": "^14.1.0",
        "sequelize": "^6.33.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.1.10",
        "sequelize-cli": "^6.6.0",
        "supertest": "^6.3.4"
    }
}
